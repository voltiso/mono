{
	"name": "@voltiso/config.prettier",
	"version": "1.0.6",
	"license": "UNLICENSED",
	"repository": "git://github.com/voltiso/mono.git",
	"__________": "__________",
	"sideEffects": false,
	"__________EXPORTS FALLBACK": "__________",
	"types": "dist/cjs/index.d.ts",
	"main": "dist/cjs/index.js",
	"__________PUBLISH WHITELIST": "__________",
	"files": [
		"dist"
	],
	"__________SCRIPTS": "__________",
	"scripts": {
		"__________TEST": "__________",
		"test": "jest",
		"__________LINT": "__________",
		"lint": "run-s lint:fast lint:slow",
		"lint:fast": "run-p lint:depcheck lint:prettier",
		"lint:slow": "run-p lint:tsc lint:eslint",
		"lint:depcheck": "depcheck",
		"lint:prettier": "prettier --check .",
		"lint:eslint": "eslint --max-warnings=0 .",
		"lint:tsc": "tsc -b",
		"fix": "eslint . --fix",
		"__________BUILD": "__________",
		"build": "run-s clean build:build",
		"build:build": "run-p build:cjs",
		"build:cjs": "ttsc -b tsconfig.build.cjs.json",
		"__________PREPARE": "__________",
		"prepare": "run-s build:cjs",
		"prepublishOnly": "run-s lint:fast clean build test",
		"__________MISC": "__________",
		"v": "voltiso-script",
		"clean": "run-p clean:rimraf",
		"clean:rimraf": "rimraf dist"
	},
	"__________DEPS": "__________",
	"dependencies": {
		"@prettier/plugin-xml": "^2.2.0",
		"@voltiso/prettier-plugin-toml": "^0.3.3",
		"prettier-plugin-jsdoc": "^0.3.38",
		"prettier-plugin-sh": "^0.12.8"
	},
	"peerDependencies": {
		"prettier": "*"
	},
	"devDependencies": {
		"@types/node": "^18.7.1",
		"@voltiso/config.jest.esr": "workspace:^1.0.0",
		"jest": "^28.1.3",
		"prettier": "^2.7.1",
		"rimraf": "^3.0.2"
	}
}
