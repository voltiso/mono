{
	"name": "@voltiso/assertor",
	"version": "2.0.0",
	"license": "UNLICENSED",
	"repository": "git://github.com/voltiso/mono.git",
	"__________": "__________",
	"sideEffects": false,
	"__________EXPORTS FALLBACK": "__________",
	"types": "dist/cjs/index.d.ts",
	"module": "dist/esm/index.js",
	"main": "dist/cjs/index.js",
	"__________PUBLISH WHITELIST": "__________",
	"files": [
		"dist"
	],
	"__________SCRIPTS": "__________",
	"scripts": {
		"__________TEST": "__________",
		"test": "echo no tests yet!",
		"__________LINT": "__________",
		"lint": "run-p lint:depcheck lint:prettier lint:tsc lint:eslint",
		"lint:depcheck": "depcheck",
		"lint:prettier": "prettier --check .",
		"lint:eslint": "eslint --max-warnings=0 .",
		"lint:tsc": "tsc -b",
		"fix": "run-s fix:prettier fix:eslint",
		"fix:prettier": "prettier --write .",
		"fix:eslint": "eslint --fix .",
		"__________BUILD": "__________",
		"build": "run-s clean build:build",
		"build:build": "run-p build:esm build:cjs",
		"build:esm": "ttsc -b tsconfig.build.esm.json",
		"build:cjs": "ttsc -b tsconfig.build.cjs.json",
		"__________PREPARE": "__________",
		"prepare": "run-s build:cjs",
		"prepublishOnly": "run-p build lint test",
		"__________MISC": "__________",
		"clean": "rimraf dist"
	},
	"__________DEPS": "__________",
	"devDependencies": {
		"@voltiso/assertor.transform": "workspace:^1.0.0"
	},
	"__________MISC": "__________",
	"engines": {
		"node": ">=16"
	}
}
