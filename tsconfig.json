{
	"extends": "./tsconfig.base.json",

	"compilerOptions": {
		// referenced project must emit
		"noEmit": false,
		"emitDeclarationOnly": true,
		"outDir": ".tsc-out"
	},

	"include": ["**/*.*", "package.json"],
	// "include": ["."],
	"exclude": [
		"dist",
		"node_modules",
		".tsc-out",
		"**/compiler-options/**/test-*"
	]
}
