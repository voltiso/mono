{
	"extends": "./tsconfig.base.json",

	// if tsc-linting project with multiple tsconfig.json files,
	// here's a setup for this to work fast
	// (using ts project references)

	"compilerOptions": {
		// referenced project must emit
		"noEmit": false,
		"emitDeclarationOnly": true,
		"outDir": ".tsc-out"
	},

	"include": [
		"**/*.*",
		"package.json" // need to explicitly include? (if including it from code)
		//
	],

	"exclude": [
		"dist",
		"node_modules",
		".tsc-out",
		//
		"**/compiler-options/**/test-*"
	]
}
