{
	"name": "@voltiso/__config.jest.zone",
	"version": "1.0.0",
	"license": "UNLICENSED",
	"repository": "git://github.com/voltiso/mono.git",
	"__________": "__________",
	"sideEffects": false,
	"__________EXPORTS": "__________",
	"exports": {
		".": {
			"type": "./dist/esm/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		}
	},
	"__________EXPORTS FALLBACK": "__________",
	"types": "dist/cjs/index.d.ts",
	"module": "dist/esm/index.js",
	"main": "dist/cjs/index.js",
	"__________PUBLISH WHITELIST": "__________",
	"files": [
		"dist"
	],
	"__________SCRIPTS": "__________",
	"scripts": {
		"__________LINT": "__________",
		"lint": "run-p lint:depcheck lint:prettier lint:tsc lint:eslint",
		"lint:depcheck": "depcheck",
		"lint:prettier": "prettier --check .",
		"lint:eslint": "cross-env FULL=1 eslint --max-warnings=0 .",
		"lint:tsc": "tsc -b tsconfig.tsc-lint.json",
		"fix": "eslint . --fix",
		"__________BUILD": "__________",
		"build": "run-s clean build:build",
		"build:build": "run-p build:esm build:cjs",
		"build:esm": "v buildEsm",
		"build:cjs": "tsc -b tsconfig.build.cjs.json",
		"__________PREPARE": "__________",
		"prepublishOnly": "v prepublishOnly",
		"prepublishOnly:rest": "run-p build test lint",
		"__________MISC": "__________",
		"clean": "v clean"
	},
	"__________DEPS": "__________",
	"dependencies": {
		"@voltiso/config.jest.lib": "workspace:^"
	},
	"peerDependencies": {
		"babel-jest": "*",
		"jest": "*",
		"ts-jest": "*"
	},
	"devDependencies": {
		"@types/node": "^18.0.6",
		"jest": "^28.1.3",
		"npm-run-all": "^4.1.5",
		"ts-jest": "^28.0.7"
	}
}
