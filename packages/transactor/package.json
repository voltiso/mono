{
	"name": "@voltiso/transactor",
	"version": "8.0.4",
	"license": "UNLICENSED",
	"repository": "git://github.com/voltiso/mono.git",
	"__________EXPORTS": "__________",
	"exports": {
		".": {
			"types": "./dist/esm/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		},
		"./schemas": {
			"types": "./dist/esm/schemas/index.d.ts",
			"import": "./dist/esm/schemas/index.js",
			"require": "./dist/cjs/schemas/index.js"
		}
	},
	"typesVersions": {
		"*": {
			"schemas": [
				"dist/esm/schemas"
			]
		}
	},
	"__________EXPORTS FALLBACK": "__________",
	"types": "dist/cjs/index.d.ts",
	"module": "dist/esm/index.js",
	"main": "dist/cjs/index.js",
	"__________PUBLISH WHITELIST": "__________",
	"files": [
		"dist/"
	],
	"scripts": {
		"__________TEST": "__________",
		"test:all": "run-p test test:firestore test:localstore",
		"test": "jest",
		"test:firestore": "pnpm -w exec turbo run test --filter transactor.firestore.test",
		"test:localstore": "pnpm -w exec turbo run test --filter transactor.localstore.test",
		"__________LINT": "__________",
		"lint": "run-p lint:depcheck lint:prettier lint:tsc lint:eslint",
		"lint:depcheck": "depcheck",
		"lint:prettier": "prettier --check .",
		"lint:eslint": "eslint --max-warnings=0 .",
		"lint:tsc": "tsc -b",
		"fix": "run-s fix:prettier fix:eslint",
		"fix:prettier": "prettier --write .",
		"fix:eslint": "eslint --fix .",
		"__________BUILD": "__________",
		"build": "run-s clean build:build",
		"build:build": "run-p build:esm build:cjs",
		"build:esm": "ttsc -b tsconfig.build.esm.json",
		"build:cjs": "ttsc -b tsconfig.build.cjs.json",
		"build:dev": "cross-env ASSERTOR_NO_STRIP=1 pnpm run build",
		"__________PREPARE": "__________",
		"prepublishOnly": "run-s clean build test:all",
		"__________MISC": "__________",
		"clean": "rimraf dist"
	},
	"__________DEPS": "__________",
	"dependencies": {
		"@voltiso/firestore-like": "workspace:^1.0.10",
		"@voltiso/util": "workspace:^42.2.0",
		"chalk": "^4.1.2",
		"fast-equals": "^4.0.1",
		"js-yaml": "^4.1.0"
	},
	"peerDependencies": {
		"@voltiso/schemar": ">= 11.0.0"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.5",
		"@voltiso/assertor": "workspace:^2.0.0",
		"@voltiso/schemar": "workspace:^12.0.2",
		"rimraf": "^3.0.2",
		"zone.js": "^0.11.7"
	},
	"__________MISC": "__________",
	"engines": {
		"node": ">=16"
	}
}
