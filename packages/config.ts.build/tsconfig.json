{
	"extends": "@voltiso/config.ts",

	"exclude": [
		"/**/*.test.*"
		//
	],

	"compilerOptions": {
		// "composite": true,
		"composite": false,

		"noEmit": false,

		"declaration": true,
		"declarationMap": true,

		"plugins": [
			{ "transform": "@voltiso/assertor.transform" },

			{
				"transform": "@voltiso/transform",
				"afterDeclarations": true
			},

			// Transform paths in output .js files
			{
				"transform": "typescript-transform-paths",
				"exclude": ["**/dist/**"]
			},

			// Transform paths in output .d.ts files (Include this line if you output declarations files)
			{
				"transform": "typescript-transform-paths",
				"exclude": ["**/dist/**"],
				"afterDeclarations": true
			}
		]

		// !
		// ! OVERWRITE WHEN EXTENDING !
		// !
		// "rootDir": "src",
		// "baseUrl": ".",
		// "paths": {
		// 	"*": ["node_modules/*/"]
		// }
	}

	// !
	// ! OVERWRITE WHEN EXTENDING !
	// !
	// "include": ["src"],
	// "exclude": [
	// 	"**/*.test.ts",
	// 	"**/*.test.tsx"
	// ]
}
