{
	"extends": "@voltiso/config.ts",

	"compilerOptions": {
		"paths": {
			"_": ["./src/_"],
			"_/*": ["./src/_/*"],
			"~": ["./src"],
			"~/*": ["./src/*"],

			// Redirect self-imports of this package to its 'src' directory (prevents parsing `dist`)
			"@voltiso/util": ["./src/index.ts"],
			"@voltiso/util/*": ["./src/*"]
		}
	},

	"exclude": [
		".turbo/",
		"dist/",
		"node_modules/",
		".tsc-out/",
		//
		"src/tsc-options/"
	]
}
