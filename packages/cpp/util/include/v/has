#pragma once

#define VOLTISO_HAS_DEFINE(NAME)                                               \
	namespace VOLTISO_NAMESPACE::hasValue {                                      \
	template <class T>                                                           \
	concept NAME = requires(T t) { t.NAME; };                                    \
	}                                                                            \
	namespace VOLTISO_NAMESPACE::hasFunction {                                   \
	template <class T>                                                           \
	concept NAME = requires(T t) { t.NAME(); };                                  \
	}                                                                            \
	namespace VOLTISO_NAMESPACE::has {                                           \
	template <class T>                                                           \
	concept NAME = hasValue::NAME<T> || hasFunction::NAME<T>;                    \
	}

VOLTISO_HAS_DEFINE(NUM_ITEMS)
VOLTISO_HAS_DEFINE(numItems)
VOLTISO_HAS_DEFINE(size)

// VOLTISO_HAS_DEFINE(NUM_CHARS)
// VOLTISO_HAS_DEFINE(numChars)

VOLTISO_HAS_DEFINE(NUM_SLOTS)
VOLTISO_HAS_DEFINE(numSlots)
VOLTISO_HAS_DEFINE(capacity)

VOLTISO_HAS_DEFINE(key)
VOLTISO_HAS_DEFINE(value)
VOLTISO_HAS_DEFINE(entry)

VOLTISO_HAS_DEFINE(hash)

VOLTISO_HAS_DEFINE(EXTENT)
VOLTISO_HAS_DEFINE(extent)
