#pragma once
#include <v/_/_>

#include "v/has"

#include <functional>

// ! `std::hash`
// ! use classes with `.hash()` as items in STL hash tables
namespace std {
template <::VOLTISO_NAMESPACE::has::hash T> struct hash<T> {
	[[nodiscard]] constexpr auto operator()(const T &t) const
	  noexcept(noexcept(t.hash())) {
		return t.hash();
	}
};
} // namespace std
