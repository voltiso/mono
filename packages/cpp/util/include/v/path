namespace VOLTISO_NAMESPACE {
// #pragma GCC diagnostic push
// #pragma GCC diagnostic ignored "-Wuser-defined-literals"
template <Path PATH> consteval auto &operator""_p() { return PATH; }
// #pragma GCC diagnostic pop
} // namespace VOLTISO_NAMESPACE
