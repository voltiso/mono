#pragma once
#include <voltiso/_>

#ifndef __cpp_exceptions
#include <glog/logging.h>
#endif

namespace VOLTISO_NAMESPACE {

template <class T> [[noreturn]] void throwError(const T &error) {
#ifdef __cpp_exceptions
  throw error;
#else
  LOG(FATAL) << error.what();
  std::abort();
#endif
}

} // namespace VOLTISO_NAMESPACE
