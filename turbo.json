{
	"$schema": "https://turborepo.org/schema.json",
	"baseBranch": "origin/master",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},

		"test": {
			"dependsOn": ["^build"],
			"outputs": [],
			"inputs": [
				"src/**/*.ts",
				"src/**/*.tsx",
				"src/**/*.js",
				"src/**/*.jsx",

				"test/**/*.ts",
				"test/**/*.tsx",
				"test/**/*.js",
				"test/**/*.jsx"
			]
		},

		"lint": {
			"dependsOn": ["^build"],
			"inputs": [
				"src/**/*.*",
				"test/**/*.*",
				"script/**/*.*",
				"**/*.md",
				"**/*.cjs",
				"**/*.yml",
				"**/*.yaml",
				"**/*.json"
			],
			"outputs": []
		},

		"fix": {
			"inputs": [
				"src/**/*.*",
				"test/**/*.*",
				"script/**/*.*",

				"**/*.md",
				"**/*.cjs",
				"**/*.yml",
				"**/*.yaml",
				"**/*.json"
			],
			"outputs": ["*"]
		}
	}
}
