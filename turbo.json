{
	"$schema": "https://turborepo.org/schema.json",

	"pipeline": {
		"dev": {
			"cache": false
		},

		"build:esm": {
			"dependsOn": ["^build:esm", "^build:cjs"],
			"outputs": ["dist/esm/**"]
		},

		"build:cjs": {
			"dependsOn": ["^build:cjs"],
			"outputs": ["dist/cjs/**"]
		},

		"test": {
			"dependsOn": ["^build:cjs"],
			"inputs": ["**", ":!dist/"],
			"outputs": []
		},

		"lint:eslint": {
			"dependsOn": ["^build:cjs"],
			"inputs": ["**", ":!dist/"],
			"outputs": []
		},

		"lint:tsc": {
			"dependsOn": ["^build:cjs", "fix:prettier"],
			"inputs": ["**", ":!dist/"],
			"outputs": []
		},

		"depcheck": {
			"outputs": []
		},

		"typecov": {
			"dependsOn": ["^build:cjs"],
			"inputs": ["src", "package.json"],
			"outputs": ["package.json"]
		},

		"fix:prettier": {},

		"fix:eslint": {},

		"trace:run": {
			"dependsOn": ["^build:cjs"],
			"outputs": ["traceDir"]
		},

		"trace": {
			"dependsOn": ["trace:run"],
			"outputs": []
		}
	}
}
