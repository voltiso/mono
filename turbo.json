{
	"$schema": "https://turborepo.org/schema.json",
	"baseBranch": "origin/master",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},

		"test": {
			"outputs": [],
			"inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
		},

		"lint": {
			"dependsOn": ["^build"],
			"inputs": [
				"src/**/*.*",
				"test/**/*.*",
				"script/**/*.*",
				"**/*.md",
				"**/*.cjs",
				"**/*.yml",
				"**/*.yaml",
				"**/*.json"
			],
			"outputs": []
		},

		"fix": {
			"inputs": [
				"src/**/*.*",
				"test/**/*.*",
				"script/**/*.*",
				"**/*.md",
				"**/*.cjs",
				"**/*.yml",
				"**/*.yaml",
				"**/*.json"
			],
			"outputs": ["*"]
		}
	}
}
