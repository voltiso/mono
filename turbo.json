{
	"$schema": "https://turborepo.org/schema.json",
	"baseBranch": "origin/master",

	"pipeline": {
		"dev": {
			"cache": false
		},

		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},

		"build-core": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},

		"test": {
			"dependsOn": ["^build"],
			"inputs": ["**", ":!dist/"],
			"outputs": []
		},

		"lint:eslint:fast": {
			"inputs": ["**", ":!dist/"],
			"outputs": []
		},

		"lint:eslint:full": {
			"dependsOn": ["^build"],
			"inputs": ["**", ":!dist/"],
			"outputs": []
		},

		"lint:depcheck": {
			"cache": false
		},

		"fix:prettier": {
			"cache": false
		},

		"fix:eslint": {
			"cache": false
		},

		"clean": {
			"cache": false
		}
	}
}
