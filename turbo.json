{
	"$schema": "https://turborepo.org/schema.json",

	"pipeline": {
		"dev": {
			"cache": false
		},

		"build:esm": {
			"dependsOn": ["^build:esm"],
			"outputs": ["dist/esm/**"]
		},

		"build:cjs": {
			"dependsOn": ["^build:cjs"],
			"outputs": ["dist/cjs/**"]
		},

		"test": {
			"dependsOn": ["^build:cjs"],
			"inputs": ["**", ":!dist/"],
			"outputs": []
		},

		"lint:eslint": {
			"inputs": ["**", ":!dist/"],
			"outputs": []
		},

		"lint:tsc": {
			"inputs": ["**", ":!dist/"],
			"outputs": []
		},

		"depcheck": {
			"cache": false
		},

		"typecov": {
			"inputs": ["src"],
			"outputs": ["package.json"]
		},

		"fix:prettier": {},

		"fix:eslint": {}
	}
}
